<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.olivergrant.oliver.easytimesheet">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/easy_timesheet"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/easy_timesheet_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity_EndOfMonthHours"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".activity_AdminOptions" android:screenOrientation="portrait"/>
        <activity android:name=".activity_EmployeeList" android:screenOrientation="portrait"/>
        <activity android:name=".Homepage" android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity_codeScreen" android:screenOrientation="portrait" />
        <activity android:name=".activityAdminControls" android:screenOrientation="portrait"/>

        <meta-data
            android:name="com.google.android.gms.version.DEPENDENCIES"
            android:value="barcode" />

        <activity android:name=".New_Employee" android:screenOrientation="portrait"/>
    </application>

</manifest>